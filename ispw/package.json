{
	"name": "ispw",
	"displayName": "ISPW",
	"description": "ISPW - Visual Studio Code Extension ",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ispw.helloWorld",
		"onCommand:ispw.generate"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "ISPW",
			"properties": {
				"Yaml Location": {
					"type": "string",
					"default": null,
					"scope": "resource",
					"description": "The yaml path"
				},
				"Level": {
					"type": "string",
					"default": null,
					"scope": "resource",
					"description": " ISPW level "
				},
				"Assignment": {
					"type": "string",
					"default": null,
					"scope": "resource",
					"description": "Assignment name"
				},
				"TOPAZ CLI": {
					"type": "string",
					"default": null,
					"scope": "resource",
					"description": "The location that Topaz CLI is installed"
				}
			}
		},
		"languages": [
			{
				"id": "cobol",
				"extensions": [
					".cob",
					".copy"
				],
				"aliases": [
					"COB",
					"Copybook"
				]
			}
		],
		"commands": [
			{
				"command": "ispw.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "ispw.generate",
				"title": "ISPW Generate"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "ispw.generate",
					"when": "true"
				}
			],
			"explorer/context": [
				{
					"command": "ispw.generate",
					"when": "resourceLangId == cobol && !explorerResourceIsFolder",
					"group": "inline"
				}
			],
			"editor/context": [
				{
					"command": "ispw.generate",
					"when": "resourceLangId == cobol"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
