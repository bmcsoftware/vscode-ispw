{
	"name": "IspwVsCode",
	"icon": "media/ISPW_marble.png",
	"displayName": "BMC Compuware ISPW",
	"author": "BMC",
        "license": "LICENSE.txt",
	"description": "BMC Compuware ISPW - Visual Studio Code Extension",
	"version": "1.1.0",
	"publisher": "BMC",
	"repository": {
		"type": "git",
		"url": "https://github.com/bmcsoftware/vscode-ispw.git"
	},
	"bugs": {
		"url": "https://www.bmc.com/support/support-central.html"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"keywords": [
		"ISPW",
		"BMC",
		"Compuware",
		"SCM",
		"mainframe",
		"build",
		"Topaz"
	],
	"categories": [
		"SCM Providers",
		"Other"
	],
	"activationEvents": [
		"onCommand:ISPW.buildExplorer",
		"onCommand:ISPW.generateExplorer",
		"onCommand:ISPW.loadExplorer",
		"onCommand:ISPW.generateWithParmsExplorer",
		"onCommand:ISPW.buildEditor",
		"onCommand:ISPW.generateEditor",
		"onCommand:ISPW.loadEditor",
		"onCommand:ISPW.clearCreds",
		"onCommand:ISPW.generateWithParmsEditor"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "ISPW",
			"properties": {
				"ISPW.Assignment Description": {
					"type": "string",
					"default": null,
					"scope": "application",
					"description": "The description to give assignments created by ISPW actions."
				},
				"ISPW.Level": {
					"type": "string",
					"default": null,
					"scope": "application",
					"description": "The level to use in the ISPW life cycle."
				},
				"ISPW.Topaz CLI Installation Path": {
					"type": "string",
					"default": null,
					"scope": "machine",
					"description": "File path of the Topaz CLI Installation folder."
				},
				"ISPW.YAML Mapping File": {
					"type": "string",
					"default": null,
					"scope": "resource",
					"description": "File path of the .yml mapping file."
				},
				"ISPW.CES URL": {
					"type": "string",
					"default": null,
					"scope": "resource",
					"description": "The URL for Compuware Enterprise Services."
				},
				"ISPW.Security Token": {
					"type": "string",
					"default": null,
					"scope": "resource",
					"description": "The Compuware Enterprise Services authentication token."
				}
			}
		},
		"commands": [
			{
				"command": "ISPW.buildExplorer",
				"title": "ISPW: Build"
			},
			{
				"command": "ISPW.generateExplorer",
				"title": "ISPW: Generate"
			},
			{
				"command": "ISPW.loadExplorer",
				"title": "ISPW: Load"
			},
			{
				"command": "ISPW.generateWithParmsExplorer",
				"title": "ISPW: Generate with Parms"
			},
			{
				"command": "ISPW.buildEditor",
				"title": "ISPW: Build"
			},
			{
				"command": "ISPW.generateEditor",
				"title": "ISPW: Generate"
			},
			{
				"command": "ISPW.loadEditor",
				"title": "ISPW: Load"
			},
			{
				"command": "ISPW.clearCreds",
				"title": "ISPW: Clear Stored Credentials"
			},
			{
				"command": "ISPW.generateWithParmsEditor",
				"title": "ISPW: Generate with Parms"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "ISPW.buildExplorer",
					"when": "false"
				},
				{
					"command": "ISPW.generateExplorer",
					"when": "false"
				},
				{
					"command": "ISPW.loadExplorer",
					"when": "false"
				},
				{
					"command": "ISPW.buildEditor",
					"when": "true"
				},
				{
					"command": "ISPW.generateEditor",
					"when": "true"
				},
				{
					"command": "ISPW.loadEditor",
					"when": "true"
				},
				{
					"command": "ISPW.clearCreds",
					"when": "true"
				},
				{
					"command": "ISPW.generateWithParmsEditor",
					"when": "true"
				},
				{
					"command": "ISPW.generateWithParmsExplorer",
					"when": "false"
				}
			],
			"explorer/context": [
				{
					"command": "ISPW.buildExplorer",
					"when": "!explorerResourceIsFolder",
					"group": "ispw@1"
				},
				{
					"command": "ISPW.generateExplorer",
					"when": "!explorerResourceIsFolder",
					"group": "ispw@2"
				},
				{
					"command": "ISPW.loadExplorer",
					"when": "!explorerResourceIsFolder",
					"group": "ispw@4"
				},
				{
					"command": "ISPW.generateWithParmsExplorer",
					"when": "!explorerResourceIsFolder && !listMultiSelection",
					"group": "ispw@3"
				}
			],
			"editor/context": [
				{
					"command": "ISPW.buildEditor",
					"when": "editorTextFocus && !editorReadonly"
				},
				{
					"command": "ISPW.generateEditor",
					"when": "editorTextFocus && !editorReadonly"
				},
				{
					"command": "ISPW.loadEditor",
					"when": "editorTextFocus && !editorReadonly"
				},
				{
					"command": "ISPW.generateWithParmsEditor",
					"when": "editorTextFocus && !editorReadonly"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run lint && npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run lint && npm run compile",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"generate-source-doc": "npx typedoc src",
		"coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/mocha": "^8.2.0",
		"@types/xml2js": "^0.4.11",
		"@typescript-eslint/eslint-plugin": "^4.15.0",
		"@typescript-eslint/parser": "^4.15.0",
		"chai": "^4.3.0",
		"eslint": "^7.22.0",
		"mocha": "^10.2.0",
		"nyc": "^15.1.0",
		"tape": "^5.1.1",
		"typedoc": "^0.23.24",
		"vsce": "^2.15.0"
	},
	"dependencies": {
		"@types/glob": "^7.1.3",
		"@types/js-yaml": "^4.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@vscode/webview-ui-toolkit": "^0.8.5",
		"axios": "^1.1.3",
		"cheerio": "^1.0.0-rc.9",
		"fs": "^0.0.1-security",
		"glob": "^7.1.6",
		"global-var": "^0.1.0",
		"js-yaml": "^4.0.0",
		"lodash": "^4.17.20",
		"ts-node": "^9.1.1",
		"typescript": "^4.9.4",
		"utf-8-validate": "^5.0.4",
		"vscode-test": "^1.4.1",
		"ws": "^7.4.2",
		"xml2js": "^0.4.23"
	}
}
